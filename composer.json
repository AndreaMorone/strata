{
    "name": "francoisfaubert/strata",
    "type": "library",
    "description": "Strata is a MVC programming environment for Bedrock and Wordpress.",
    "keywords": [
        "wordpress",
        "mvc"
    ],
    "homepage": "http://github.com/francoisfaubert/strata",
    "license": "GPL",
    "authors": [
        {
            "name": "Francois Faubert",
            "email": "frank@francoisfaubert.com",
            "homepage": "http://francoisfaubert.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "altorouter/altorouter": "1.1.0",
        "apigen/apigen": "dev-master",
        "symfony/console": "~2.6",
        "francoisfaubert/strata-template-files": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "4.6.*"
    },
    "repositories": {
        "strata-template-files": {
            "type": "git",
            "url": "https://github.com/francoisfaubert/strata-template-files"
        }
    },
    "autoload": {
        "psr-4": {
            "Strata\\": "src"
        }
    },
    "support": {
        "issues": "https://github.com/francoisfaubert/strata/issues"
    },
    "minimum-stability": "dev",
    "prefer-stable" : true
}
